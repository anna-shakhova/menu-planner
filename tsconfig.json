{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "module": "ESNext",
    "lib": [
      "es6",
      "es2017",
      "DOM"
    ],
    "rootDir": ".",
    "outDir": "./build",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowJs": true,
    "pretty": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./public/index.tsx"
  ]
}
